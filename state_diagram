digraph "State Machine" {
	graph [color=black directed=true fillcolor=white label="State Machine" rankdir=LR "strict"=false style=solid]
	node [color=black fillcolor=white peripheries=1 shape=rectangle style="rounded, filled"]
	edge [color=black]
	sleeping [label=sleeping color=red fillcolor=darksalmon peripheries=2]
	waiting_closed [label=waiting_closed]
	waiting_open [label=waiting_open]
	opening [label=opening]
	acquiring [label=acquiring]
	configuring [label=configuring]
	focusing [label=focusing]
	observing [label=observing]
	closing [label=closing]
	pau [label=pau]
	alert [label=alert]
	sleeping -> alert [label="wake_up [roof_err]"]
	sleeping -> waiting_closed [label=wake_up]
	waiting_closed -> pau [label="done_waiting [done_observing]"]
	waiting_closed -> opening [label="done_waiting [ready_to_open]"]
	waiting_closed -> waiting_closed [label=done_waiting]
	opening -> closing [label="done_opening [roof_err]"]
	opening -> waiting_open [label=done_opening]
	waiting_open -> closing [label="acquire [done_observing]"]
	waiting_open -> waiting_open [label="acquire [no_target]"]
	waiting_open -> acquiring [label=acquire]
	acquiring -> configuring [label=done_acquiring]
	acquiring -> waiting_open [label="done_acquiring [acquisition_failed]"]
	configuring -> focusing [label="start_observation [focus_next]"]
	configuring -> observing [label=start_observation]
	observing -> waiting_open [label=observation_complete]
	focusing -> waiting_open [label=focusing_complete]
	focusing -> focusing [label="focusing_complete [focus_failed]"]
	closing -> alert [label="done_closing [roof_err]"]
	closing -> pau [label="done_closing [done_observing]"]
	closing -> waiting_closed [label=done_closing]
}
